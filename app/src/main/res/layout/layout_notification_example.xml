<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_speech_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/speech_rate"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_speech_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_speech_rate"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        android:stepSize="1"
        android:value="50"/>

    <TextView
        android:id="@+id/tv_speech_timbre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/slider_speech_rate"
        android:text="@string/speech_timbre"
        android:layout_marginTop="12dp"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_speech_timbre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_speech_timbre"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        android:value="50"
        android:stepSize="1"/>

    <TextView
        android:id="@+id/tv_speech_pitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/slider_speech_timbre"
        android:text="@string/speech_pitch"
        android:layout_marginTop="12dp"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_speech_pitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_speech_pitch"
        android:valueFrom="0.0"
        android:valueTo="40.0"
        android:value="20"
        android:stepSize="1"/>

    <TextView
        android:id="@+id/tv_speech_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/slider_speech_pitch"
        android:text="@string/speech_voice"
        android:layout_marginTop="12dp"/>

    <Spinner
        android:id="@+id/spinner_voices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_speech_voice"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tv_document_sample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinner_voices"
        android:layout_marginTop="12dp"
        android:text="@string/sample_text"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/action_btns_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="btn_notification_no_spatialization, btn_notification_spatialization"
        android:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_notification_no_spatialization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btn_notification_spatialization"
        android:text="@string/notification_scenario_no_spatialization"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_notification_spatialization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/notification_scenario_spatialization"/>

</androidx.constraintlayout.widget.ConstraintLayout>