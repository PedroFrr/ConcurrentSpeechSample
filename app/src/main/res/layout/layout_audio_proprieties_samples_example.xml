<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_audio_properties_scenario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Propriedades em simultâneo com o texto"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/btn_scenario_with_pauses" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_scenario_with_pauses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/play_scenario_with_pauses"
        app:layout_constraintBottom_toTopOf="@id/btn_scenario_with_pauses_faster"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_scenario_with_pauses_faster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/play_scenario_with_pauses_faster"
        app:layout_constraintBottom_toTopOf="@id/btn_spatial_scenario" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_spatial_scenario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Propriedades em simultâneo com o texto e espacialização"
        app:layout_constraintBottom_toTopOf="@id/btn_scenario_with_pauses_with_earcon" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_scenario_with_pauses_with_earcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cenário com pausas | earcons e voz"
        app:layout_constraintBottom_toTopOf="@id/btn_scenario_only_with_earcons" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_scenario_only_with_earcons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cenário com pausas e só earcons"
        app:layout_constraintBottom_toTopOf="@id/cv_media_player_buttons" />

    <include
        android:id="@+id/cv_media_player_buttons"
        layout="@layout/custom_view_play_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>