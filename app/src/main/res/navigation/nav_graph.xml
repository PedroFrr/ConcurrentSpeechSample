<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/optionsFragment">

    <fragment
        android:id="@+id/optionsFragment"
        android:name="com.example.multipleaudioplayer.OptionsFragment"
        android:label="OptionsFragment"
        tools:layout="@layout/layout_sample_options_fragment">
        <action
            android:id="@+id/options_to_notification_example"
            app:destination="@id/notificationExampleFragment" />
        <action
            android:id="@+id/options_to_scanning_example"
            app:destination="@id/scanningExampleFragment" />
    </fragment>
    <fragment
        android:id="@+id/notificationExampleFragment"
        android:name="com.example.multipleaudioplayer.notification.NotificationExampleFragment"
        android:label="NotificationExampleFragment"
        tools:layout="@layout/layout_notification_example"/>
    <fragment
        android:id="@+id/scanningExampleFragment"
        android:name="com.example.multipleaudioplayer.scanning.ScanningExampleFragment"
        android:label="ScanningExampleFragment"
        tools:layout="@layout/layout_scanning_example"/>
</navigation>